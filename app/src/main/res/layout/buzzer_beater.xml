<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:text="Start"
        android:layout_below="@+id/textViewTime"
        android:layout_alignRight="@+id/textViewBox"
        android:layout_alignEnd="@+id/textViewBox"
        android:layout_marginTop="88dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnStop"
        android:text="Stop"
        android:layout_toEndOf="@+id/textViewSeconds"
        android:layout_alignTop="@+id/btnStart"
        android:layout_toRightOf="@+id/textViewSeconds" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewBox"
        android:textSize="25sp"
        android:text="       "
        android:editable="false"
        android:inputType="number"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:background="@drawable/square_back"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTime"
        android:layout_marginTop="59dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="108dp"
        android:maxLength="2"
        android:textSize="25sp"
        android:text="99"
        android:inputType="number"
        android:background="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seconds"
        android:textSize="25sp"
        android:id="@+id/textViewSeconds"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/textViewBox"
        android:layout_toRightOf="@+id/textViewBox"
        android:layout_toEndOf="@+id/textViewBox" />

</RelativeLayout>